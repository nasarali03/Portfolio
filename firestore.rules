
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to portfolio data, but restrict writes to authenticated users.
    match /singletons/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /experience/{experienceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /education/{educationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /certifications/{certificationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
